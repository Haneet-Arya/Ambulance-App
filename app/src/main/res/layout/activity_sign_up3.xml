<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp3"
    android:background="@color/bgcolor">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Create Account"
        android:textColor="@color/whiteH"
        android:textSize="30sp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/sfregular"
        android:id="@+id/header"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Few more Steps to go!!"
        android:textColor="#80FFFFFF"
        android:textSize="16sp"
        android:layout_marginLeft="22dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup2"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        android:id="@+id/imageSignup"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageSignup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Enter OTP"
        android:textColor="@color/whiteH"
        android:fontFamily="@font/sfregular"
        android:textSize="16sp"
        android:layout_marginTop="98dp"
        android:textFontWeight="500"
        android:layout_marginLeft="32dp"
        android:id="@+id/enterotp"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/enterotp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#fff"
        android:fontFamily="@font/sfregular"
        android:textSize="12sp"
        android:paddingLeft="7dp"
        android:layout_marginTop="9dp"
        android:id="@+id/otp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Didnâ€™t Receive OTP ? "
        android:textColor="@color/whiteS"
        android:gravity="right"
        app:layout_constraintRight_toLeftOf="@id/resend"
        android:layout_marginTop="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:fontFamily="@font/sfregular"
        android:id="@+id/alreadyHaveAccount"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/resend_otp"

        app:layout_constraintLeft_toRightOf="@id/alreadyHaveAccount"
        app:layout_constraintTop_toBottomOf="@id/otp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/whiteH"
        android:layout_marginTop="8dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:fontFamily="@font/sfregular"
        android:id="@+id/resend"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/resend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#0957DE"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="Submit"
        android:textColor="#ffffff"
        android:fontFamily="@font/sfregular"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:id="@+id/submit"
        />


</androidx.constraintlayout.widget.ConstraintLayout>